<%= render "card/card_menu" %>

<%= form_tag(requests_path, class: "form-horizontal") do %>
  <div class="form-group">
    <label for="inputTitle" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%=@bib['title']%></p>
    </div>
  </div>
  <div class="form-group">
    <label for="pickup_location_library" class="col-sm-2 control-label">Pickup Library</label>
    <div class="col-sm-10">
      <select class="form-control" id="pickup_location_library" name="pickup_location_library">
     		<%= options_for_select(@libraries) %>
     	</select>
    </div>
  </div>
  <div class="form-group">
    <label for="comment" class="col-sm-2 control-label">Comments</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="comment" name="comment" placeholder="Comments">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Create Request</button>
      <a href="<%= request.referrer%>" id="cancel" name="cancel" class="btn btn-default">Cancel</a>
    </div>
  </div>
  <%= hidden_field_tag(:mms_id, params[:mms_id]) %>
  <%= hidden_field_tag(:holding_id, params[:holding_id]) %>
  <%= hidden_field_tag(:item_id, params[:item_id]) %>
  <%= hidden_field_tag(:request_type, "HOLD") %>
  <%= hidden_field_tag(:pickup_location_type, "LIBRARY") %>
<% end %>